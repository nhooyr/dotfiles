if [[ ! "$tty_history_path" ]]; then
  id="$(xxd -p -l 2 /dev/urandom)"
  tty="$(tty | tr / -)"
  tty="${tty#-}"
  tty_history_path="$HOME/.local/share/zsh/$tty-$id.log"
  mkdir -p "$(dirname "$tty_history_path")"
  export tty_history_path
  # script -q -F >(head -c 1048576 > "$tty_history_path"; > /dev/null)
  # exit "$?"
fi

source ~/src/nhooyr/dotfiles/zsh/lib.zsh
source ~/src/nhooyr/dotfiles/zsh/bookmarks.zsh

if [[ "$OSTYPE" == darwin* ]]; then
  source ~zsh/macos.zsh
elif [[ "$DISTRO" == "debian" ]]; then
  source ~zsh/debian.zsh
fi

source_if_exists ~secrets/env.zsh || true

source ~zsh/misc.zsh
source ~zsh/env.zsh
source ~zsh/completion.zsh
source ~zsh/aliases.zsh
source ~zsh/git.zsh
source ~zsh/history.zsh
source ~zsh/prompt.zsh
source ~zsh/fzf.zsh
source ~zsh/remote.zsh
source ~zsh/syntax.zsh
# Machine specific overrides.
source_if_exists ~zsh/local.zsh

if command_exists post_os_zshrc; then
  post_os_zshrc
fi
